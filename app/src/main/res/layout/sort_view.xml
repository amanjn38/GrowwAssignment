<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sort_view_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/sortRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">

            <RadioButton
                android:id="@+id/sortByName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="Name"
                android:textColor="@drawable/radio_flat_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/sortByHeight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="Height"
                android:textColor="@drawable/radio_flat_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/sortByMass"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="Mass"
                android:textColor="@drawable/radio_flat_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/sortByCreated"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="Created"
                android:textColor="@drawable/radio_flat_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/sortByEdited"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="Edited"
                android:textColor="@drawable/radio_flat_text_color"
                android:textSize="16sp" />

        </RadioGroup>

        <Button
            android:id="@+id/bt_apply"
            style="@style/ButtonTextStyle2_Selected_Primary"
            android:layout_width="160dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:text="Apply" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>